page {
  height: 100%;
}
.monitor {
  background: #607fcc;
  height: 100%;
}
.monitor .head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
  padding-top: 20px;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  letter-spacing: 1px;
  font-weight: 500;
}
.monitor .head .left {
  margin-left: 20rpx;
  width: 730rpx;
  margin-bottom: 5px;
}
.monitor .head .right {
  margin-left: 20rpx;
  width: 730rpx;
}
.monitor .nav {
  margin-top: 50rpx;
}
.monitor .nav .scroll-view_H {
  white-space: nowrap;
  width: 100%;
}
.monitor .nav .scroll-view-item_H {
  display: inline-block;
  height: 180rpx;
  text-align: center;
  font-size: 33rpx;
  width: 240rpx;
  background: #fff;
  border-radius: 25rpx;
  margin: 0 20rpx;
  color: #3b466c;
  font-weight: 650;
  letter-spacing: 1px;
}
.monitor .nav .scroll-view-item_H .text {
  margin-top: -6px;
}
.monitor .pic {
  height: 100%;
  background: #fff;
  margin-top: 25px;
  border-radius: 50rpx;
}
.monitor .pic .navTab {
  left: 0;
  top: 0;
  color: white;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  font-size: 24rpx;
  z-index: 996;
}
.monitor .pic .searchNav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 10px;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  width: 750rpx;
}
.monitor .pic .searchNav .Time {
  margin: 0 20rpx;
}
.monitor .pic .searchNav .Time .time {
  background: #f4bd5b;
  color: #fff;
  width: 225rpx;
  padding-left: 15rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 30rpx;
  margin-bottom: 5px;
}
.monitor .pic .searchNav .Time .picker {
  height: 56rpx;
  text-align: center;
  background-color: #fff;
  color: black;
  border-radius: 10rpx;
  width: 240rpx;
  border: 1px solid #fff;
  font-size: 40rpx;
  border: 1px solid #f4bd5b;
}
.monitor .pic .searchNav .action {
  width: 180rpx;
}
.monitor .pic .searchNav .action .search {
  background: #5675c6;
  border-radius: 30rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
}
.monitor .pic .searchNav .action .reset {
  border: 1px solid #5675c6;
  border-radius: 30rpx;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 5px;
}

